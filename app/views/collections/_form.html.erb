<%= bootstrap_form_for(@collection) do |f| %>

    <%= f.alert_message 'The record could not be saved due to the following errors:' %>

    <%= f.text_field :slug %>

    <%= f.select :repository_id, @repositories.collect { |r| [r.title, r.id] }, {} %>

    <%= f.text_field :display_title %>
    <%= f.text_area :teaser %>
    <%= f.text_area :short_description %>

    <%= f.color_field :color %>

    <%= f.form_group :public do %>
        <%= f.check_box :public %>
    <% end %>

    <%= f.form_group :remote do %>
      <%= f.check_box :remote %>
    <% end %>

    <%= f.form_group :in_georgia do %>
      <%= f.check_box :in_georgia %>
    <% end %>

    <%= f.select :other_repositories, @repositories.collect { |r| [r.title, r.slug] }, { include_blank: true }, { multiple: true } %>

    <%= text_field_multi @collection, :dc_title %>
    <%= text_field_multi @collection, :dc_format %>
    <%= text_field_multi @collection, :dc_publisher %>
    <%= text_field_multi @collection, :dc_identifier %>
    <%= text_field_multi @collection, :dc_rights %>
    <%= text_field_multi @collection, :dc_contributor %>
    <%= text_field_multi @collection, :dc_coverage_t %>
    <%= text_field_multi @collection, :dc_coverage_s %>
    <%= text_field_multi @collection, :dc_date %>
    <%= text_field_multi @collection, :dc_source %>
    <%= text_field_multi @collection, :dc_subject %>
    <%= text_field_multi @collection, :dc_type %>
    <%= text_field_multi @collection, :dc_description %>
    <%= text_field_multi @collection, :dc_creator %>
    <%= text_field_multi @collection, :dc_language %>
    <%= text_field_multi @collection, :dc_relation %>

    <%= f.collection_check_boxes :subject_ids, Subject.all, :id, :name %>

    <%= f.primary 'Save' %>

<% end %>