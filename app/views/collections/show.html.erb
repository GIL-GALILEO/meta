<%= content_for :admin_area_title do %>
    Show Collection
<% end %>

<%= content_for :admin_area_subtitle do %>
    <%= @collection.display_title %>
<% end %>

<%= link_to 'Edit', edit_collection_path(@collection), class: 'btn btn-default' %>

<br><br>

<%= render('shared/show_field', field_name: t(:repository_id, scope: [:activerecord, :attributes, :collection]), value: @collection.repository.title) if @collection.repository %>
<%= render 'shared/show_field', field_name: t(:slug,          scope: [:activerecord, :attributes, :collection]), value: @collection.slug %>
<%= render 'shared/show_field', field_name: t(:dpla,          scope: [:activerecord, :attributes, :collection]), value: @collection.dpla %>
<%= render 'shared/show_field', field_name: t(:public,        scope: [:activerecord, :attributes, :collection]), value: @collection.public%>

<%= render partial: 'shared/show_dc_fields', locals: { entity: @collection } %>

<%= render 'shared/show_field', field_name: t(:created_at,    scope: [:activerecord, :attributes, :collection]), value: @collection.created_at %>
<%= render 'shared/show_field', field_name: t(:updated_at,    scope: [:activerecord, :attributes, :collection]), value: @collection.updated_at %>