<%= content_tag :div, class: 'form-group' do %>
  <% e = entity.class.name.demodulize.underscore %>
  <%=
    label_tag "#{e}_dc_right", t("activerecord.attributes.#{e}.dc_right")
  %>
  <%=
    select(
        e,
        :dc_right,
        all_rights_statements_for_select,
        { include_blank: true },
        { class: 'form-control standardized-rights-select' }
    )
  %>
<% end %>

