<div class="btn-group btn-group-xs">
  <%= link_to 'View', entity, class: 'btn btn-default' %>
  <%= link_to('BL View', solr_document_path(entity.slug), class: 'btn btn-default') if show_bl %>
  <%= link_to 'Edit', url_for([:edit, entity]), class: 'btn btn-default' %>
  <%= link_to 'Delete', entity, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
</div>