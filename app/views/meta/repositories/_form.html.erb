<%= bootstrap_form_for([:meta, @repository], inline_errors: false) do |f| %>

    <%= f.alert_message 'The record could not be saved due to the following errors:' %>

    <%= f.text_field :slug %>
    <%= f.text_field :title %>
    <%= f.text_area :teaser %>
    <%= f.text_area :short_description %>
    <%= f.text_area :description %>
    <%= f.color_field :color %>

    <%= f.form_group :public do %>
      <%= f.check_box :public %>
    <% end %>

    <%= f.form_group :in_georgia do %>
      <%= f.check_box :in_georgia %>
    <% end %>

    <%= f.url_field :homepage_url %>
    <%= f.url_field :directions_url %>
    <%= f.text_area :address %>
    <%= f.text_area :strengths %>
    <%= f.text_area :contact %>

    <%= f.primary 'Save' %>

<% end %>