<%= bootstrap_form_for([:meta, @admin]) do |f| %>

    <%= f.alert_message 'The Batch could not be saved due to the following errors:' %>

    <%= f.email_field :email %>

    <% if current_page?(action: 'new') %>
      <%= f.password_field :password %>
      <%= f.password_field :password_confirmation %>
    <% end %>

    <% if current_admin.super? %>
        <%= f.collection_check_boxes :role_ids, @data[:roles], :id, :name %>
        <%= f.select :creator_id, Admin.all.collect! { |u| [u.email, u.id] } %>
    <% end %>

    <% if current_admin.super? or current_admin.coordinator? %>
        <%= f.select :repository_ids, @data[:repositories].collect! { |r| [r.title, r.id] }, { include_blank: true }, { multiple: true } %>
        <%= f.select :collection_ids, @data[:collections].collect! { |c| [c.title, c.id] }, { include_blank: true }, { multiple: true } %>
    <% end %>

    <%= f.primary 'Save' %>

<% end %>