<div class="panel panel-default">
  <div class="panel-heading">
    <h5>
      <a class="">Item Search</a>
    </h5>
  </div>
  <div class="panel-body">
    <%= bootstrap_form_tag url: submit_path, method: :get do |f| %>
        <%= f.text_field :keyword, { value: params[:keyword], name: 'keyword' } %>
        <%= f.select :collection_id, options_for_select(@search_options[:collections].collect { |c| [c.title, c.id] }, selected: params[:collection_id] ), { include_blank: true }, { name: 'collection_id' } %>
        <%= f.select :repository_id, options_for_select(@search_options[:repositories].collect { |r| [r.title, r.id] }, selected: params[:repository_id] ), { include_blank: true }, { name: 'repository_id' } %>
        <%= f.select :public, options_for_select(@search_options[:public], selected: params[:public]), {}, { name: 'public' } %>
        <%= f.select :dpla, options_for_select(@search_options[:dpla], selected: params[:dpla]), {}, { name: 'dpla' } %>
        <%= f.primary 'Search' %>
    <% end %>
  </div>
</div>