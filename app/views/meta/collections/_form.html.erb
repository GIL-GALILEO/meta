<%= bootstrap_form_for([:meta, @collection]) do |f| %>

    <%= f.alert_message 'The record could not be saved due to the following errors:' %>

    <%= f.text_field :slug %>

    <%= f.select :repository_id, @data[:repositories].collect { |r| [r.title, r.id] }, {} %>

    <%= f.text_field :display_title %>
    <%= f.text_area :teaser %>
    <%= f.text_area :short_description %>

    <%= f.color_field :color %>

    <%= f.form_group :public do %>
        <%= f.check_box :public %>
    <% end %>

    <%= f.form_group :remote do %>
      <%= f.check_box :remote %>
    <% end %>

    <%= f.form_group :in_georgia do %>
      <%= f.check_box :in_georgia %>
    <% end %>

    <%= f.select :other_repositories, @data[:repositories].collect { |r| [r.title, r.slug] }, { include_blank: true }, { multiple: true } %>

    <%= meta_textarea @collection, :dc_identifier %>
    <%= meta_textarea @collection, :dc_right %>
    <%= meta_textarea @collection, :dc_relation %>
    <%= meta_textarea @collection, :dc_format %>
    <%= meta_textarea @collection, :dc_date %>
    <%= meta_textarea @collection, :dcterms_is_part_of %>
    <%= meta_textarea @collection, :dcterms_contributor %>
    <%= meta_textarea @collection, :dcterms_creator %>
    <%= meta_textarea @collection, :dcterms_description %>
    <%= meta_textarea @collection, :dcterms_extent %>
    <%= meta_textarea @collection, :dcterms_medium %>
    <%= meta_textarea @collection, :dcterms_identifier %>
    <%= meta_textarea @collection, :dcterms_language %>
    <%= meta_textarea @collection, :dcterms_spatial %>
    <%= meta_textarea @collection, :dcterms_publisher %>
    <%= meta_textarea @collection, :dcterms_access_right %>
    <%= meta_textarea @collection, :dcterms_rights_holder %>
    <%= meta_textarea @collection, :dcterms_subject %>
    <%= meta_textarea @collection, :dcterms_temporal %>
    <%= meta_textarea @collection, :dcterms_title %>
    <%= meta_textarea @collection, :dcterms_type %>
    <%= meta_textarea @collection, :dcterms_is_shown_at %>
    <%= meta_textarea @collection, :dcterms_provenance %>
    <%= meta_textarea @collection, :dcterms_license %>

    <%= f.collection_check_boxes :subject_ids, @data[:subjects], :id, :name %>

    <%= f.primary 'Save' %>

<% end %>