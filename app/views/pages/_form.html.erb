<%= bootstrap_form_for [@item, @page] do |f| %>
  <%= f.alert_message t('meta.defaults.messages.errors.invalid_on_save',
                        entity: 'Page') %>
  <%= f.text_field :number %>
  <%= f.text_field :title %>
  <%= f.text_field :file_type %>
  <% if @page.file? %>
    <label>File</label>
    <%= image_tag(@page.file.url, class: 'thumbnail') %>
    <%= f.check_box :remove_file, label: t('meta.page.labels.remove_file') %>
  <% else %>
    <%= f.file_field :file %>
    <%= f.hidden_field :file_cache %>
  <% end %>
      <%= f.text_area :fulltext, class: 'fulltext-input' %>
      <div class="action-buttons">
      <%= f.primary I18n.t('meta.defaults.actions.save'), class: 'btn btn-primary' %>
  </div>
<% end %>