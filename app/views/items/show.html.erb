<%= content_for :admin_area_title do %>
    Show Item
<% end %>

<%= content_for :admin_area_subtitle do %>
    <%= @item.dc_title.first %>
<% end %>

<%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-default' %>

<br><br>

<%= render('shared/show_field', field_name: t(:collection_id, scope: [:activerecord, :attributes, :item]), value: @item.collection.dc_title.first) if @item.collection %>
<%= render 'shared/show_field', field_name: t(:slug,          scope: [:activerecord, :attributes, :item]), value: @item.slug %>
<%= render 'shared/show_field', field_name: t(:dpla,          scope: [:activerecord, :attributes, :item]), value: @item.dpla %>
<%= render 'shared/show_field', field_name: t(:public,        scope: [:activerecord, :attributes, :item]), value: @item.public%>

<%= render partial: 'shared/show_dc_fields', locals: { entity: @item} %>


<%= render 'shared/show_field', field_name: t(:created_at,    scope: [:activerecord, :attributes, :item]), value: @item.created_at %>
<%= render 'shared/show_field', field_name: t(:updated_at,    scope: [:activerecord, :attributes, :item]), value: @item.updated_at %>
