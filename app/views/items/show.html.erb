<%= content_for :admin_area_title do %>
    Show Item
<% end %>

<%= content_for :admin_area_subtitle do %>
    <%= @item.dc_title.first %>
<% end %>

<%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-default' %>

<br><br>

<%= render('shared/show_field', field_name: t('activerecord.attributes.item.collection_id'), value: @item.collection.dc_title.first) if @item.collection %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.item.slug'), value: @item.slug %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.item.dpla'), value: @item.dpla %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.item.public'), value: @item.public%>

<%= render partial: 'shared/show_dc_fields', locals: { entity: @item} %>

<%= render 'shared/show_field', field_name: t('activerecord.attributes.item.created_at'), value: @item.created_at %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.item.updated_at'), value: @item.updated_at %>
