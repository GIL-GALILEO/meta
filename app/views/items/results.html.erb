<%= content_for :title do %>
    Items
<% end %>

<%= content_for :subtitle do %>
    <%= @data[:count] %> found
<% end %>

<%= link_to 'Search Items', search_items_path, class: 'btn btn-default' %>

<% if @data[:results].empty? %>

    <p>No results found.</p>

<% else %>

    <%= bootstrap_form_tag url: multiple_action_items_path do |f| %>

    <table class='table table-condensed table-hover'>
      <thead>
        <tr>
          <th>
            
          </th>
          <th>
            <%= sortable 'id', 'ID' %>
          </th>
          <th>
            <%= sortable 'slug' %>
          </th>
          <th>
            Title
          </th>
          <th>
            <%= sortable 'collection_id', 'Collection' %>
          </th>
          <th width="185px"></th>
        </tr>
      </thead>

      <tbody>
        <% @data[:results].each do |result| %>
          <tr>
            <td>
              <input type="checkbox" name="ids[]" value="<%= result.id %>">
            </td>
            <td>
              <%= link_to result.id, item_path(result) %>
            </td>
            <td>
              <%= link_to result.slug, item_path(result) %>
            </td>
            <td>
              <%= result.title %>
            </td>
            <td>
              <%= link_to(result.collection.display_title, collection_path(result.collection)) if result.collection %>
            </td>
            <td>
              <%= render partial: 'shared/entity_actions', locals: { base_path: item_path(result), edit_path: edit_item_path(result), entity: result, show_bl: true } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>


    <%= f.primary 'Delete Selected', data: { confirm: 'Are you sure?' } if can?(:multiple_delete, Item) %>
    <%= f.primary 'XML for Selected' if can?(:multiple_xml, Item) %>

    <% end %>

    <%= paginate @data[:results] %>

<% end %>
