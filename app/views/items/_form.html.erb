<%= bootstrap_form_for(@item) do |f| %>

    <%= f.alert_message 'The record could not be saved due to the following errors:' %>

    <%= f.text_field :slug %>

    <%= f.select :collection_id, @collections_for_select, { include_blank: true }, {} %>

    <%= f.form_group :public do %>
      <%= f.check_box :public %>
    <% end %>

    <%= f.form_group :dpla do %>
      <%= f.check_box :dpla %>
    <% end %>

    <%= f.form_group :in_georgia do %>
      <%= f.check_box :in_georgia %>
    <% end %>

    <%= f.select :other_collections, @collections_for_select, { include_blank: true }, { multiple: true } %>

    <%= text_field_multi @item, :dc_title%>
    <%= text_field_multi @item, :dc_format%>
    <%= text_field_multi @item, :dc_publisher%>
    <%= text_field_multi @item, :dc_identifier%>
    <%= text_field_multi @item, :dc_rights%>
    <%= text_field_multi @item, :dc_contributor%>
    <%= text_field_multi @item, :dc_coverage_t%>
    <%= text_field_multi @item, :dc_coverage_s%>
    <%= text_field_multi @item, :dc_date%>
    <%= text_field_multi @item, :dc_source%>
    <%= text_field_multi @item, :dc_subject%>
    <%= text_field_multi @item, :dc_type%>
    <%= text_field_multi @item, :dc_description%>
    <%= text_field_multi @item, :dc_creator%>
    <%= text_field_multi @item, :dc_language%>
    <%= text_field_multi @item, :dc_relation%>

    <%= f.primary 'Save' %>

<% end %>