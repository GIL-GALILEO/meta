<%= bootstrap_form_for(@item) do |f| %>

    <%= f.alert_message t('meta.defaults.messages.errors.invalid_on_save', entity: 'Item') %>

    <%= f.text_field :slug %>

    <%= f.select :collection_id, @data[:collections].collect { |c| [c.display_title, c.id] }, { include_blank: true }, { class: 'collection-select' } %>

    <%= f.form_group :public do %>
        <%= f.check_box :public %>
    <% end %>

    <%= f.form_group do %>
        <%= f.check_box :dpla %>
    <% end %>

    <%= f.select :other_collections, @data[:collections].collect { |c| [c.display_title, c.id] }, { include_blank: true }, { multiple: true,  class: 'fancy-multiselect' } %>

    <%= render partial: 'shared/edit_dc_fields', locals: {f: f, entity: @item } %>

    <%= f.primary I18n.t('meta.defaults.actions.save'), class: 'btn btn-primary fixed-save-button' %>

<% end %>