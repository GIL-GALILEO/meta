<%= bootstrap_form_for([:meta, @item]) do |f| %>

    <%= f.alert_message 'The Item could not be saved due to the following errors:' %>

    <%= f.text_field :slug %>

    <%= f.select :collection_id, @collections.collect { |c| [c.display_title, c.id] }, { include_blank: true }, {} %>

    <%= f.form_group :public do %>
        <%= f.check_box :public %>
    <% end %>

    <%= f.form_group :dpla do %>
        <%= f.check_box :dpla %>
    <% end %>

    <%= f.select :other_collections, @collections.collect { |c| [c.display_title, c.slug] }, { include_blank: true }, { multiple: true } %>

    <%= render partial: 'shared/edit_dc_fields', locals: {f: f, entity: @item } %>

    <%= f.primary 'Save' %>

<% end %>