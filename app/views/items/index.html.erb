<%= content_for :title do %>
    Items
<% end %>

<%=
    content_for :subtitle do
      if @items.empty?
        t('meta.defaults.labels.filtered_empty_subtitle')
      elsif params[:collection_id] && !params[:collection_id].empty?
         t('meta.defaults.labels.filtered_by_subtitle', title: @items.first.collection.display_title)
      else
        t('meta.defaults.labels.unfiltered_index_subtitle')
      end
    end
%>

<% breadcrumb :items %>

<%= link_to t('meta.item.actions.add'), new_item_path, class: 'btn btn-default' %>
<%= link_to 'Deleted Items', deleted_items_path, class: 'btn btn-default' %>

<%= render 'shared/per_pager' %>

<br><br>

<div class="well well-sm">
  <%= bootstrap_form_tag url: items_path, method: :get, layout: :horizontal, label_col: 'col-sm-1', control_col: 'col-sm-11' do |f| %>
      <%= f.hidden_field :direction, { value: params[:direction], name: 'direction' } if params[:direction] %>
      <%= f.hidden_field :sort, { value: params[:sort], name: 'sort' } if params[:sort] %>
      <%= f.hidden_field :per_page, { value: params[:per_page], name: 'per_page' } if params[:per_page] %>
      <%= f.select :collection_id, options_for_select(@search_options[:collections].collect { |c| [c.display_title, c.id] }, selected: params[:collection_id] ), { label: t('meta.defaults.labels.filter.collection'), include_blank: true }, { name: 'collection_id' } %>
      <%= f.select :public, options_for_select(@search_options[:public], selected: params[:public]), { label: t('meta.defaults.labels.filter.public')}, { name: 'public' } %>
      <%= f.primary t('meta.defaults.labels.filter.filter_button') %>
  <% end %>
</div>

<% if @items.empty? %>

    <p><%= t('meta.defaults.labels.no_records_found', entity: 'Items') %></p>

<% else %>

    <table class="table table-condensed table-hover">
      <thead>
        <tr>
          <th>
            <%= sortable 'id', t('meta.defaults.labels.columns.id') %>
          </th>
          <th>
            <%= sortable 'slug', t('meta.defaults.labels.columns.slug') %>
          </th>
          <th>
            <%= sortable 'dc_title', t('meta.defaults.labels.columns.title') %>
          </th>
          <th >
            <%= sortable 'public', t('meta.defaults.labels.columns.public') %>
          </th>
          <th>
            <%= t('meta.defaults.labels.columns.valid') %>
          </th>
          <th>
            <%= t('meta.item.labels.columns.collection') %>
          </th>
          <th width="185px"></th>
        </tr>
      </thead>

      <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= link_to item.id, item_path(item) %>
            </td>
            <td>
              <%= link_to item.slug, item_path(item) %>
            </td>
            <td>
              <%= item.title %>
            </td>
            <td>
              <%= boolean_check_icon item.public %>
            </td>
            <td>
              <%= item_validation_status item %>
            </td>
            <td>
              <%= link_to item.collection.display_title, collection_path(item.collection) %>
            </td>
            <td>
              <%= render partial: 'shared/entity_actions', locals: { base_path: item_path(item), edit_path: edit_item_path(item), entity: item, show_bl: true } %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <%= paginate @items %>

<% end %>
