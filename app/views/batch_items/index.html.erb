<%= content_for :title do %>
    Items for Batch
<% end %>

<%=
  content_for :subtitle do
    @batch.name
  end
%>

<% breadcrumb :batch_items, @batch %>

<% unless @batch.committed? %>
  <%= link_to 'Add Batch Item', new_batch_batch_item_path(@batch), class: 'btn btn-default' %>
  <%= link_to 'Populate Batch Items via XML', xml_batch_path(@batch), class: 'btn btn-default' %>
<% end %>

<%= render 'shared/per_pager' %>

<% if @batch_items.empty? %>

    <p>No Batch Items have been added yet.</p>

<% else %>

    <table class="table table-condensed table-hover">
      <thead>
      <tr>
        <th>
          <%= sortable 'id', 'ID' %>
        </th>
        <th>
          <%= sortable 'slug' %>
        </th>
        <th>
          <%= sortable 'dcterms_title', 'Title' %>
        </th>
        <th>
          <%= sortable 'collection_id', 'Collection' %>
        </th>
        <th width="185px"></th>
      </tr>
      </thead>

      <tbody>
      <% @batch_items.each do |item| %>
          <tr>
            <td>
              <%= link_to item.id, batch_batch_item_path(@batch, item) %>
            </td>
            <td>
              <%= link_to item.slug, edit_batch_batch_item_path(@batch, item) %>
            </td>
            <td>
              <%= item.dcterms_title.first %>
            </td>
            <td>
              <%= link_to(item.collection.display_title, collection_path(item.collection)) if item.collection %>
            </td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to 'View', batch_batch_item_path(@batch, item) , class: 'btn btn-default' %>
                <% unless @batch.committed? %>
                  <%= link_to 'Edit', edit_batch_batch_item_path(@batch, item) , class: 'btn btn-default' %>
                  <%= link_to 'Delete', batch_batch_item_path(@batch, item), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %>
                <% end %>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= paginate @batch_items %>

<% end %>
