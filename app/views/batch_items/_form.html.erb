<%= bootstrap_form_for([@batch, @batch_item], url: batch_batch_item_path(@batch, @batch_item) ) do |f| %>

    <%= f.alert_message 'The Batch Item could not be saved due to the following errors:' %>

    <%= f.text_field :slug, label: t('activerecord.attributes.batch_item.slug'), help: t('activerecord.help.batch_item.slug')  %>

    <%= f.select :collection_id, @collections.collect { |c| [c.display_title, c.id] }, { include_blank: true, label: t('activerecord.attributes.batch_item.collection_id'), help: t('activerecord.help.batch_item.collection_id') }, {  } %>

    <%= f.form_group :public, help: t('activerecord.help.batch_item.public') do %>
        <%= f.check_box :public, label: t('activerecord.attributes.batch_item.public') %>
    <% end %>

    <%= f.form_group :dpla, help: t('activerecord.help.batch_item.dpla') do %>
        <%= f.check_box :dpla, label: t('activerecord.attributes.batch_item.dpla') %>
    <% end %>

    <%= f.select :other_collections, @collections.collect { |c| [c.display_title, c.slug] }, { include_blank: true, label: t('activerecord.attributes.batch_item.other_collections'), help: t('activerecord.help.batch_item.other_collections') }, { multiple: true } %>

    <%= render partial: 'shared/edit_dc_fields', locals: { f: f, entity: @batch_item } %>

    <%= f.primary 'Save' %>

<% end %>