<%= bootstrap_form_for(@repository, inline_errors: false) do |f| %>

    <%= f.alert_message t('meta.defaults.messages.errors.invalid_on_save', entity: 'Repository') %>

    <%= f.text_field :slug %>
    <%= f.text_field :title %>
    <%= f.form_group :public do %>
        <%= f.check_box :public %>
    <% end %>

    <%= f.form_group :in_georgia do %>
        <%= f.check_box :in_georgia %>
    <% end %>
    <%= f.select :portal_ids, @data[:portals].collect { |c| [c.name, c.id] }, {}, { multiple: true,  class: 'fancy-multiselect' } %>
    <%= f.text_area :teaser %>
    <%= f.text_area :short_description %>
    <%= f.text_area :description %>
    <%= f.text_field :coordinates %>
    <% if @repository.color %>
        <%= f.color_field :color %>
    <% else %>
        <%= f.color_field :color, value: '#ffffff' %>
    <% end %>
    <%= f.url_field :thumbnail_path %>
    <%= f.url_field :homepage_url %>
    <%= f.url_field :directions_url %>
    <%= f.text_area :address %>
    <%= f.text_area :strengths %>
    <%= f.text_area :contact %>

    <%= f.primary 'Save' %>

<% end %>