<%= content_for :title do %>
    Show Repository
<% end %>

<%= content_for :subtitle do %>
    <%= @repository.title %>
<% end %>

<% breadcrumb :repository, @repository %>

<%= link_to t('meta.defaults.actions.edit'), edit_repository_path(@repository), class: 'btn btn-default' %>

<br><br>


<%= render 'shared/show_field', field_name: t(:thumbnail,    scope: [:activerecord, :attributes, :repository]), value: link_to(image_tag(@repository.thumbnail.url, class: 'thumbnail'), @repository.thumbnail.url) %>
