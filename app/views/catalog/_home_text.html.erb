<div class="panel panel-default">
  <div class="panel-heading">Browse by Collection</div>
  <div class="panel-body">
    <ul>
    <% Collection.all.each do |c| %>
        <li><%= link_to c.display_title, c.dc_identifier.first  %></li>
    <% end %>
    </ul>
  </div>
</div>
<div class="panel panel-default">
  <div class="panel-heading">Browse by Institution</div>
  <div class="panel-body">
    <ul>
      <% Repository.all.each do |r| %>
          <li><%= link_to r.title, r.homepage_url  %></li>
      <% end %>
    </ul>
  </div>
</div>
<% unless current_meta_admin %>
  <%= link_to 'Admin Sign In', new_meta_admin_session_path, data: { no_turbolink: true } %>
<% else %>
  <%= link_to 'Admin Area', meta_home_path, data: { no_turbolink: true } %>
<% end %>