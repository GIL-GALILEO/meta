<%= content_for :title do %>
    Committed Batches
<% end %>

<%=
  content_for :subtitle do
    if params[:admin_id] && @user
      'For ' + @user.email
    else
      'All of them'
    end
  end
%>

<%= link_to 'Add Batch', new_batch_path, class: 'btn btn-default' %>

<%= render 'shared/per_pager' %>

<br><br>

<% if @batches.empty? %>

    <p>No Batches have been committed yet.</p>

<% else %>

    <table class="table table-condensed table-hover">
      <thead>
      <tr>
        <th>
          <%= sortable 'id', 'ID' %>
        </th>
        <th>
          <%= sortable 'name' %>
        </th>
        <th>
          Item Count
        </th>
        <th>
          Creator
        </th>
        <th width="185px"></th>
      </tr>
      </thead>

      <tbody>
      <% @batches.each do |batch| %>
          <tr>
            <td>
              <%= link_to batch.id, batch %>
            </td>
            <td>
              <%= link_to batch.name, batch %>
            </td>
            <td>
              <%= link_to batch.batch_items.size, batch_batch_items_path(batch_id: batch.id) %>
            </td>
            <td>
              <%= batch.user.email %>
            </td>
            <td>
              <%= render partial: 'shared/entity_actions', locals: { base_path: batch_path(batch), edit_path: edit_batch_path(batch), entity: batch, show_bl: false } %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= paginate @batches %>

<% end %>

