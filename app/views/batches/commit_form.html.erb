<%= content_for :title do %>
    Commit Batch
<% end %>

<%=
  content_for :subtitle do
    @batch.name
  end
%>

<% breadcrumb :batch, @batch %>

<h3>
  You will be committing <%= @batch.batch_items.length %> records in this action.
</h3>

<%= bootstrap_form_tag url: commit_batch_path(@batch), html: { id: 'commit_form' } do |f| %>
    <%= f.primary 'Commit' %>
<% end %>

<br><br>

<div class="progress">
  <div class="progress-bar progress-bar-striped hide" role="progressbar" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100" style="width: 100%">
    <span class="sr-only">Working</span>
  </div>
</div>