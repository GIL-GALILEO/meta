<%= content_for :title do %>
    Remediation Actions
<% end %>

<% breadcrumb :remediation_actions %>

<%= link_to 'New Action', new_remediation_action_path, class: 'btn btn-default' %>

<br><br>

<% if @remediation_actions.empty? %>

    <p><%= t('meta.defaults.labels.no_records_found', entity: 'Remediation Actions') %></p>

<% else %>

    <table class="table table-condensed table-hover">
      <thead>
      <tr>
        <th>
          <%= sortable 'remediation_actions.id', t('meta.defaults.labels.columns.id') %>
        </th>
        <th>
          <%= sortable 'remediation_actions.field', t('activerecord.attributes.remediation_action.field') %>
        </th>
        <th>
          <%= t('activerecord.attributes.remediation_action.user_id') %>
        </th>
        <th>
          <%= sortable 'remediation_actions.performed_at', t('activerecord.attributes.remediation_action.performed_at') %>
        </th>
        <th width="185px"></th>
      </tr>
      </thead>

      <tbody>
      <% @remediation_actions.each do |action| %>
          <tr>
            <td>
              <%= link_to action.id, remediation_action_path(action) %>
            </td>
            <td>
              <%= link_to action.field, remediation_action_path(action) %>
            </td>
            <td>
              <%= action.user.email %>
            </td>
            <td>
              <%= display_date action.performed_at %>
            </td>
            <td>
              <div class="btn-group btn-group-xs">
                <%= link_to t('meta.defaults.actions.view'), remediation_action_path(action), class: 'btn btn-default' %>
                <%= link_to t('meta.defaults.actions.destroy'),
                            remediation_action_path(action),
                            method: :delete,
                            data: { confirm: I18n.t('meta.defaults.labels.confirm') },
                            class: 'btn btn-default' %>
              </div>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>

    <%= paginate @remediation_actions %>

<% end %>


