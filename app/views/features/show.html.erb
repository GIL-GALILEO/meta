<%= content_for :title do %>
    Show Feature
<% end %>

<%= content_for :subtitle do %>
    <%= @feature.title %>
<% end %>

<% breadcrumb :feature, @feature %>

<%= link_to t('meta.defaults.actions.edit'), edit_feature_path(@feature), class: 'btn btn-default' %>

<br><br>

<%= render 'shared/show_field', field_name: t(:image, scope: [:activerecord, :attributes, :feature]), value: link_to(image_tag(@feature.image.url, class: 'thumbnail'), @feature.image.url) %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.feature.area'), value: @feature.area %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.feature.title'), value: @feature.title %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.feature.title_link'), value: @feature.title_link %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.feature.institution'), value: @feature.institution %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.feature.institution_link'), value: @feature.institution_link %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.feature.short_description'), value: @feature.short_description %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.feature.external_link'), value: @feature.external_link %>
<%= render 'shared/show_field', field_name: t('activerecord.attributes.feature.primary'), value: @feature.primary %>