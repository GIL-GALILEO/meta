    <!-- sunspot dynamic fields -->
    <dynamicField name="_local*"   stored="false"  type="tdouble"  multiValued="false"   indexed="true"/>
    <dynamicField name="*_text"    stored="false"  type="text"     multiValued="true"    indexed="true"/>
